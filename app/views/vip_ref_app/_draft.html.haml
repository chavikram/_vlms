-if params[:page].to_i == 0
  %td= index+1
-else
  %td= (params[:page].to_i-1)*10+index+1
%td=reference.letter_no
%td=l reference.letter_date
%td=l reference.diaried_date

%td=reference.subject  
%td=reference.section.name
%td=reference.vip_ref_status.try(:status_name)
%td=reference.vip_category.name
%td=l reference.created_at
%td
  = link_to 'View', reference
  = link_to '| Move to Pending', move_to_inbox_vip_reference_path(reference,:section_id=>reference.dealing_section.id), method: :post

/%td= link_to 'Edit', edit_vip_reference_path(reference)
/%td= link_to 'Destroy', reference, :method => :delete, :data => { :confirm => 'Are you sure?' }
  