%p#notice= notice
%div.panel.panel-info
  %div.panel-heading
    ="Show VIP Reference Statuses"
  %div.panel-body
    %table.table
      %tr
        %td= "Status Name"
        %td=@vip_ref_status.status_name
      %tr
        %td= "Status Desc"
        %td= @vip_ref_status.status_desc
      %tr
        %td= "Is Default?"
        %td= @vip_ref_status.default
      %tr
        %td= "Is Deleted?"
        %td= @vip_ref_status.deleted
      %tr
        %td= "Created At"
        %td= @vip_ref_status.created_at.to_formatted_s(:long)
      %tr
        %td= "Updated At"
        %td= @vip_ref_status.updated_at.to_formatted_s(:long)


= link_to 'Edit', edit_vip_ref_status_path(@vip_ref_status)
\|
= link_to 'Back', vip_ref_statuses_path
