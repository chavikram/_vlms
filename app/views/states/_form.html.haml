= form_for [@country,@state] do |f|
  - if @state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@state.errors.count, "error")} prohibited this state from being saved:"
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg

  %div.row.top-buffer
    %div.col-md-4= f.label :name
    %div.col-md-8= f.text_field :name
  %div.row.top-buffer
    %div.col-md-4= f.label :code
    %div.col-md-8= f.text_field :code
  %div.row.top-buffer
    %div.col-md-4= f.label :country
    %div.col-md-8= f.collection_select(:country_id, Country.all, :id,:name,{}, {:class=>'form-control'})
  %div.row.top-buffer
    %div.col-md-12
      = f.submit :class=>'btn btn-default'
