= form_for @country do |f|
  - if @country.errors.any?
    #error_explanation
      %h2= "#{pluralize(@country.errors.count, "error")} prohibited this country from being saved:"
      %ul
        - @country.errors.full_messages.each do |msg|
          %li= msg
  %div.row.top-buffer
    %div.col-md-4=f.label :name
    %div.col-md-8=f.text_field :name, :class=>'form-control'
  %div.row.top-buffer
    %div.col-md-4=f.label :code
    %div.col-md-8=f.text_field :code, :class=>'form-control'
  %div.row.top-buffer
    %div.col-md-12
      = f.submit :class=>'btn btn-default'
