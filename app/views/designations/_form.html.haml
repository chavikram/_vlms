= form_for @designation  do |f|
  - if @designation .errors.any?
    #error_explanation
      %h2= "#{pluralize(@designation .errors.count, "error")} prohibited this designation from being saved:"
      %ul
        - @designation .errors.full_messages.each do |msg|
          %li= msg

  %div.row.top-buffer
    %div.col-md-4=f.label :name
    %div.col-md-8=f.text_field :name, :class=>'form-control'

  %div.row.top-buffer
    %div.col-md-4=f.label :designation_code
    %div.col-md-8=f.text_field :designation_code, :class=>'form-control'

  %div.row.top-buffer
    %div.col-md-4= f.label :default
    %div.col-md-8= f.check_box :default , {:class=>'form-control'}
  %div.row.top-buffer
    %div.col-md-12
      = f.submit :class=>'btn btn-default'


