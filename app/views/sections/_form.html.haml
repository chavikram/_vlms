= form_for @section do |f|
  - if @section.errors.any?
    #error_explanation
      %h4= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      /
        %ul
          - @section.errors.full_messages.each do |msg|
            %li= msg
  %div.row.top-buffer
    %div.col-md-4= f.label :name
    %div.col-md-8= f.text_field :name, {:class=>'form-control'}
  %div.row.top-buffer
    %div.col-md-4= f.label :short_name
    %div.col-md-8= f.text_field :short_name, {:class=>'form-control'}
  %div.row.top-buffer
    %div.col-md-4=f.label :sectionofficer
    %div.col-md-4= f.collection_select(:sectionofficer_id, User.all, :id,:contact_name,{}, {:class=>'form-control'})
  %div.row.top-buffer
    %div.col-md-4=f.label :undersecretary
    %div.col-md-4= f.collection_select(:undersecretary_id, User.all, :id,:contact_name,{}, {:class=>'form-control'})
  %div.row.top-buffer
    %div.col-md-4=f.label :director
    %div.col-md-4= f.collection_select(:director_id, User.all, :id,:contact_name,{}, {:class=>'form-control'})
  %div.row.top-buffer
    %div.col-md-4=f.label :js
    %div.col-md-4= f.collection_select(:js_id, User.all, :id,:contact_name,{}, {:class=>'form-control'})

    
  %div.row.top-buffer
    %div.col-md-9
    %div.col-md-3
      = f.submit :class=> 'btn btn-primary'
